{
  "private": true,
  "name": "basic-streams-dev",
  "scripts": {
    "cleanup": "rm -f packages/*/index.js",
    "test": "tsc --noEmit && prettier --l $npm_package_prettierFiles && jest",
    "prettier": "prettier --write $npm_package_prettierFiles",
    "compile": "tsc"
  },
  "prettierFiles": "**/*.{babelrc,js,json,md,ts}",
  "devDependencies": {
    "@basic-streams/emulation": "0.0.1",
    "@types/jest": "^23.0.2",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": "/test.ts$"
  }
}
