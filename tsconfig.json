{
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "moduleResolution": "node",
    "declaration": false,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ]
  },
  "include": ["packages/**/index.ts"],
  "exclude": ["node_modules"]
}
